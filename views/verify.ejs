<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    

    <link rel="stylesheet" href="forms/fonts/icomoon/style.css">

    <link rel="stylesheet" href="forms/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="forms/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="forms/css/style.css">

    <title>Register || book Overflow</title>
  </head>
  <body>
  

  <div class="half">
    <div class="bg order-1 order-md-2" style="background-image: url('forms/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-6">
            <div class="form-block">
              <div class="text-center mb-5">
              <h3>Verify <strong><%= user %></strong></h3>
              <p class="mb-4" style="color: red;"><%= msg %> </p>
              </div>
              <form action="/verify" method="post">
                  <!-- username  -->
               
                <!-- email  -->
                <div class="form-group last mb-3">
                    <label for="email">OTP</label>
                    <input type="text" name="otp" class="form-control" placeholder="otp 1234" id="password" minlength="4" maxlength="4" required>
                </div>
               
                <input type="submit" value="Verify" class="btn btn-block btn-primary" style="background-color: #2a4b7c; border-color: #2a4b7c;">

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
    
    

    <script src="forms/js/jquery-3.3.1.min.js"></script>
    <script src="forms/js/popper.min.js"></script>
    <script src="forms/js/bootstrap.min.js"></script>
    <script src="forms/js/main.js"></script>
  </body>
</html>






